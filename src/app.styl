$green = #00b7a3;
*
  padding 0
  margin 0
  outline none
button
  border none
input
  border 1px solid #eee
html, body, #app
  width 100%
  height 100%
.nickname
  line-height 30px
  width 100%
  border 1px solid $green
.dis-flex
  display flex
  height 100%
.web-im
  width 100%
  height 100%
  .user-list
    width 220px
    height 100%
    box-shadow 1px 1px 1px #eee
    .create-group-btn
      cursor pointer
    .user
      line-height 40px
      padding 0 4px
      border-bottom 1px solid #ccc
      .tips-num
        height 18px
        font-size 12px
        color #ffffff
        background $green
        min-width 20px
        border-radius 50px
        display: inline-block;
        line-height: 18px;
        text-align center
      .add-group
        width 18px
        height 18px
        line-height 18px
        text-align center
        display inline-block
        border-radius 100%
        color $green
        border 1px solid $green
        cursor pointer
  .msg-content
    position relative
    width 100%
    .header
      position sticky
      box-shadow 1px -1px 2px 2px #eee
      line-height 40px
      padding-left 20px
      font-size 24px
      top 0
      z-index 10
      background #fff
  .im-record
    padding 20px
    .join-tips
      position relative!important
      display block
      color #cccccc
      font-size 15px
      text-align center
      width 100%
      left 0!important
      transform none!important
    .li
      margin-bottom 10px
      position relative
      &:after
        content ''
        display block
        clear both
      .img
        float left
        width 50px
        height 50px
        border-radius 100%
        background #ccc
        padding 4px
        line-height 50px
        text-overflow ellipsis
        overflow hidden
        text-align center
      .message-box
        position absolute
        top 50%
        transform translateY(-50%)
        left 60px
      &.user
        .message-box
          background #46b0ff
          float right
          right 60px
          left inherit
        .img
          float right
    .message-box
      background $green
      color #ffffff
      line-height 30px
      border-radius 6px
      font-size 18px
      display inline-block
      padding 0 20px
  .footer
    position absolute
    display flex
    bottom 0
    width 100%
    box-shadow 1px 1px 8px #eee
    height 60px
    input
      flex 1
      padding 0 20px
      font-size 24px
    button
      width 200px
      background $green
      color #fff
      font-size 24px

//警告框
div.my-el-message
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  z-index 4000
  &.success .my-el-message__group
    background-image url('./assets/success.svg')
  .el-message-cover
    position fixed
    height 100%
    width 100%
    background #000
    opacity 0.2
    top 0
    left 0
    z-index 4001
  .my-el-message__group
    margin 0
    background #ffffff url('./assets/warn.svg') no-repeat 17px center
    background-size: 20px 20px
    top 50%
    border-radius 6px
    padding 0 40px 0 52px
    z-index 4002
    height 60px
    overflow hidden
    line-height 60px
    position fixed
    min-width 350px
    left 50%
    transform translateX(-50%)
    box-shadow 0 2px 8px rgba(0,0,0,.12), 0 0 6px rgba(0,0,0,.04)
    animation myshow .2s
    
    p
      margin 0
      color #333333
      font-size 14px
      padding-right 10px
    .my-el-message-close
      width 15px
      height 15px
      background url('./assets/close.svg') no-repeat
      background-size 15px 15px
      position absolute
      right 14px
      top 20px
      cursor pointer
  @keyframes myshow
    from
      transform scale(0) translateX(-100%)
    to
      transform scale(1) translateX(-50%)